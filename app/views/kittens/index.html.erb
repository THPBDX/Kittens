<!-- Page Content -->
<div class="container">

	<h1 class="font-weight-light text-center text-lg-left mt-4 mb-0">Kittens Gallery</h1>

	<hr class="mt-2 mb-5">

	<div class="row text-center text-lg-left">

		<% @kittens.each do |kitten| %>
		<div class="col-lg-3 col-md-4 col-6 kitten-div d-flex justify-content-center ">
			<a href="#" class="d-block mb-4 h-100">
				<%= image_tag("#{kitten.photo}", class: "kitten-photo rounded", alt: "#{kitten.breed}") %>
			</a>
		</div>
		<% end %>
	</div>

</div>
